<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="300dp"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fotodepan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Foto bangunan depan"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tvfotobangunandepanhint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Foto horizontal akan terlihat lebih bagus sebagai foto utama kos."
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/dotted_border"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="5dp">

            <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/kamera"
            app:tint="#585858"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah foto bangunan depan"
            android:textColor="#585858"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>