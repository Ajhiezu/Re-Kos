<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Login.RegisterasiActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_pojok" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/vektor_register" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Started!"
                    android:fontFamily="@font/robotobold"
                    android:textSize="30sp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#626262"
                        android:text="Already have an account?" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        android:text="Sign In"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="12sp"
                        android:textColor="#382CFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="19dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14sp"
                        android:textColor="#4A4A4A"/>

                    <EditText
                        android:id="@+id/editTextFullname"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:ems="10"
                        android:inputType="text"
                        android:layout_marginTop="9dp"
                        android:paddingLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textColorHint="#9C9C9C"
                        android:background="@drawable/text_field_login"
                        android:hint="Enter your name..." />
                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14sp"
                        android:textColor="#4A4A4A"/>

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="#9C9C9C"
                        android:layout_marginTop="9dp"
                        android:paddingLeft="10dp"
                        android:textSize="16sp"
                        android:background="@drawable/text_field_login"
                        android:hint="Enter your email..." />
                    <TextView
                        android:id="@+id/textViewNohp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14sp"
                        android:textColor="#4A4A4A"/>

                    <EditText
                        android:id="@+id/editTextphone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:ems="10"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="#9C9C9C"
                        android:layout_marginTop="9dp"
                        android:paddingLeft="10dp"
                        android:textSize="16sp"
                        android:background="@drawable/text_field_login"
                        android:hint="Enter your phone number..." />

                    <TextView
                        android:id="@+id/textViewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:layout_marginTop="11dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="14sp"
                        android:textColor="#4A4A4A"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextpassword"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:textColor="@color/black"
                            android:inputType="textPassword"
                            android:layout_marginTop="9dp"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            android:background="@drawable/text_field_login"
                             />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/buttonCreateAccount"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Create Account"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/robotobold"
                        android:textColor="@color/white"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_create_account"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/viewGaris"
                            android:layout_width="90dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="#9C9C9C" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Or Sign In With"
                            android:textColor="#9C9C9C"
                            android:textSize="13sp" />

                        <View
                            android:id="@+id/viewGaris2"
                            android:layout_width="90dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="#9C9C9C" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/buttonGoogle"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/text_field_login"
                                android:drawableLeft="@drawable/google"
                                android:drawablePadding="20dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="100dp"
                                android:text="Google"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>